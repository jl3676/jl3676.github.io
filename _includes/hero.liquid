<div class="hero-section">
  <div class="hero-content">
    <div class="hero-info">
      <div class="hero-text">
        <h1 class="hero-title">
          <span class="gradient-text">{{ site.first_name | upcase }}</span> {{ site.last_name | upcase }}
        </h1>
        <p class="hero-subtitle">BUILDING SAFE INTELLIGENT SYSTEMS</p>
        <div class="hero-details">
          <p>PhD Student at UC Berkeley</p>
          <p>AI Safety Researcher â€¢ Cognitive Scientist</p>
        </div>
      </div>

      {% if page.profile and page.profile.image %}
        {% assign profile_image_path = page.profile.image | prepend: 'assets/img/' %}
        <div class="hero-photo">
          {% if page.profile.image_circular %}
            {% assign profile_image_class = 'img-fluid rounded-circle' %}
          {% else %}
            {% assign profile_image_class = 'img-fluid rounded' %}
          {% endif %}
          {%
            include figure.liquid loading="eager" path=profile_image_path class=profile_image_class alt=page.profile.image
            cache_bust=true
          %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .hero-section {
    padding: 2rem 0 3rem 0;
    /* margin-bottom: 4rem; */
    position: relative;
    background: linear-gradient(135deg, #f0f8f0 0%, #f5faf5 50%, #f0f8f0 100%);
  }

  .hero-content {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero-info {
    display: flex;
    align-items: flex-start;
    gap: 4rem;
    padding: 2rem 0;
  }

  .hero-text {
    flex: 1;
    padding-top: 0.5rem;
  }

  .hero-title {
    font-size: 3.2rem;
    font-weight: 500;
    /* margin-bottom: 1rem; */
    line-height: 1.1;
    letter-spacing: 0.02em;
    margin-bottom: 1.5rem;
  }

  .hero-subtitle {
    font-size: 1.4rem;
    color: var(--global-text-color-light);
    /* margin-bottom: 1.5rem; */
    font-weight: 400;
    letter-spacing: 0.05em;
    line-height: 1.3;
    margin-bottom: 1.5rem;
  }

  .hero-details {
    font-size: 1.1rem;
    color: var(--global-text-color-light);
    font-weight: 400;
    letter-spacing: 0.03em;
    line-height: 1.6;
  }

  .hero-details p {
    margin-bottom: 0.5rem;
  }

  .hero-photo {
    flex: 0 0 220px;
    width: 220px;
    height: 220px;
    margin-top: 2.5rem;
    margin-right: 2.5rem;
  }

  .hero-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* border-radius: 16px; */
    /* box-shadow: 0 8px 32px rgba(45, 90, 135, 0.15); */
    transition: all 0.3s ease;
  }

  .hero-photo img:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(45, 90, 135, 0.25);
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 0 2rem 0;
    }

    .hero-info {
      flex-direction: column;
      text-align: center;
      gap: 2.5rem;
      padding: 1rem 0;
    }

    .hero-photo {
      flex: 0 0 180px;
      width: 180px;
      height: 180px;
      order: -1;
    }

    .hero-title {
      font-size: 2.6rem;
    }

    .hero-subtitle {
      font-size: 1.2rem;
    }

    .hero-details {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .hero-photo {
      flex: 0 0 160px;
      width: 160px;
      height: 160px;
    }

    .hero-title {
      font-size: 2.2rem;
    }

    .hero-subtitle {
      font-size: 1.1rem;
    }

    .hero-details {
      font-size: 0.95rem;
    }
  }
</style>
